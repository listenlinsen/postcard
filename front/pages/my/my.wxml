<!--pages/my/my.wxml-->

<form bindsubmit="newPostcard" bindreset="formReset">

    <view>
         <image class="profile" mode="aspectFit" bindtap="howToGetImg" src="{{imgSrc}}"></image>
        <!--<button type='primary' bindtap="howToGetImg">选择名片图片</button>-->
    </view>

    <view class="section">
        <view class="section__title">微信昵称</view>
        <open-data type="userNickName" name="wx_nickname"></open-data>
    </view>

    <view class="section">
        <view class="section__title">真实姓名</view>
        <input name="true_name"/>
    </view>

    <view class="section">
        <view class="section__title">电话号码</view>
        <input name="phone"/>
    </view>

    <view class="section">
        <view class="section__title">职位</view>
        <input name="position"/>
    </view>

    <view class="section">
        <view class="section__title">公司</view>
        <input name="company"/>
    </view>

    <view class="section">
        <view class="section__title">邮箱</view>
        <input name="email"/>
    </view>

    <view class="section">
        <view class="section__title">地址</view>
        <input name="address"/>
    </view>

    <view class="btn-area">
        <button formType="submit">生成名片</button>
        <button formType="reset">重置</button>
    </view>
</form>
